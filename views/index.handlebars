<div class="container">
    <div class="row">

        <div class="col-12 text-center" id="title">
            <h1>Ear da Burger!</h1>
        </div>

        <div class="col-6" id="food">
            <div class="row">
                {{#each burger_data}}
                {{#unless this.devoured}}
                <div class="col-6 text-center">
                    {{this.burger_name}}
                </div>
            </div>
            <div class="row">
                <form method="POST" action="/burgers/?update_method=PUT">
                    <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                    <br>
                    <button type="submit" class="btn btn-default">Devour it!</button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
        </div>
    </div>
</div>